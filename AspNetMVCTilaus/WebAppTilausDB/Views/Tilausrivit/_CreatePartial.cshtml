@model WebAppTilausDB.Models.Tilausrivit

<div class="modal" id="divTilausModal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h2>Lisää uusi tilausrivi</h2>
            </div>
            <div class="modal-body">
                @using (Html.BeginForm("Create", "Tilausrivit", FormMethod.Post, new { @id = "tilausriviCreateForm" }))
                {
                    @Html.AntiForgeryToken()

                    <div class="form-horizontal">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="form-group">
                            @Html.LabelFor(model => model.TilausID, "TilausID", htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @*@Html.DropDownList("TilausID", null, htmlAttributes: new { @class = "form-control" })*@
                                <input class="form-control" type="text" value="@ViewBag.TilausID" disabled/>
                                @Html.HiddenFor(model => model.TilausID, new { htmlAttributes = new { @class = "form-control" }, @value = ViewBag.TilausID })
                                @Html.ValidationMessageFor(model => model.TilausID, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.TuoteID, "Tuote", htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.DropDownList("TuoteID", null, htmlAttributes: new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.TuoteID, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.Maara, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.Maara, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Maara, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                }
            </div>
            <div class="modal-footer">
                <button class="btn btn-success" form="tilausriviCreateForm"><img src="~/Content/Icons/check-box.svg" /></button>
                <button class="btn btn-info" data-dismiss="modal"><img src="~/Content/Icons/x-square.svg" /></button>
            </div>
        </div>
    </div>
</div>